<% include ../partials/header%>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <% if(items.length > 0){ %>
            <table class="table">
                <tread>
                    <tr>
                        <th style="width : 1%; text-align:center">ID</th>
                        <th style="width : 29%; text-align:center">Name</th>
                        <th style="width : 20%; text-align:center">Quantity</th>
                        <th style="width : 10%; text-align:center">Amount</th>
                        <th solspan="2" style="width : 30%; text-align:center">Action</th>
                    </tr>
                </tread>
                <tbody>
                    <% items.forEach(function(item, index){%>
                    <tr>
                        <td style="width : 1%; text-align:center"><%= index + 1 %></td>
                        <td style="width : 29%; text-align:center"><%= item.name %></td>
                        <td style="width : 20%; text-align:center"><%= item.qty %></td>
                        <td style="width : 10%; text-align:center"><%= item.amount %></td>
                        <td solspan="2" style="width : 30%; text-align:center">
                            <a href="/item/edit/<%=item.id%>" class="btn btn-success">Edit</a>
                            <a href="/item/delete/<%=item.id %>" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                    <%});%>
                </tbody>
            </table>
            <% }else{ %>
            <p><strong>
                    <center>There is no records available</center>
                </strong></p>
            <% } %>
        </div>
    </div>
</div>
<% include ../partials/footer%>